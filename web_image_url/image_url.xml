<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="assets_backend" name="image_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/web_image_url/static/src/js/image_url.js"/>
            </xpath>
        </template>


        <record id="view_tree_image_url_product" model="ir.ui.view">
            <field name="name">Tree View</field>
            <field name="model">image.url</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="image_render"/>
                </tree>
            </field>
        </record>

        <record id="web_image_url_normal_form_view" model="ir.ui.view">
            <field name="name">form View</field>
            <field name="model">image.url</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                         <group>
                          <field name="image_render" widget="image_url"/>
                         </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="image_action" model="ir.actions.act_window">
            <field name="name">Field</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">image.url</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">tree</field>
        </record>

        <menuitem id="menu_image_url_render"
                  name="Image URL"
                  sequence="200"
                  parent="base.menu_sale_report"
                  action="image_action"  />

    </data>
    <act_window id="image_action"
                    name="Image URL"
                    res_model="image.url"
                    view_mode="tree,form"/>

</openerp>