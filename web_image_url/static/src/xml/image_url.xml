<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="image_url">
         <span id="display" class="oe_form_field oe_form_field_image" t-att-style="widget.node.attrs.style" style="display: block !important;" >
        <t t-if="widget.get('effective_readonly')">
           <img width="200" height="200" id="image" t-att-src="_s"/>
        </t>
        <t t-if="!widget.get('effective_readonly')">
           <input t-att-type='text' id="input"/>
        </t>
    </span>
    </t>
</templates>