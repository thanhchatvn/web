<template>

    <div t-name="kanban_task.edit" class="modal" tabindex="-1" data-backdrop="static" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn btn-primary oe_save" data-dismiss="modal">Save</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <span clas="o_column_title col-xs-12">Assigned to</span>
                        <select class="form-control col-xs-12 chzn-select chzn-rtl oe_required" data-placeholder="Assigned to">
                            <option t-if="user" t-att-value="user[0].id"><t t-esc="user[1]"/></option>
                        </select>
                        <span clas="o_column_title">Deadline</span>
                        <span class="fa fa-calendar"></span>
                        <input type="text" placeholder="Deadline here." class="form-control o_datepicker_input oe_required" t-att-value="date_deadline"></input>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <t t-name="KanbanView.QuickCreate">
        <div class="o_kanban_quick_create">
            <div class="input-group">
                <span class="o_column_title col-xs-2">Name</span>
                <input type="text" class="form-control oe_name oe_required col-xs-12"/>
            </div>
            <div class="input-group task">
                <span clas="o_column_title fa fa-calendar col-xs-2">Deadline</span>
                <span class="fa fa-calendar col-xs-2"></span>
                <input type="text" class="form-control o_datepicker_input oe_required col-xs-10"/>
            </div>
            <div class="input-group task">
                <span clas="o_column_title col-xs-2">Description</span>
                <br />
                <textarea class="form-control note-editing-area oe_required col-xs-12" rows="12" name="note"
                          placeholder="Description here." data-autosize-on="true"></textarea>
                <br />
                <span clas="o_column_title col-xs-2">Assigned to</span>
                <select data-placeholder="Search Here" class="form-control chosen-select oe_required" style="width: 220px; height: 120px">
                    <option value=""></option>
                </select>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-primary o_kanban_add oe_hidden">Add</button>
                <button class="btn btn-sm btn-primary o_new_task" style="width: 100px">Save</button>
                <button class="btn btn-sm btn-default o_kanban_cancel" style="width: 100px">Discard</button>
            </div>
        </div>
    </t>

</template>
